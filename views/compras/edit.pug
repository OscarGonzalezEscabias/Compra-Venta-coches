extends ../templates/layout

block content 
    h3 Editar una nueva compra
        div 
            form(action="/compras/edit", method="post") 
                label(for="Fecha_Compra") Fecha de compra:
                input(type="text", name="Fecha_Compra", value=`${Compra.Fecha_Compra}`)
                br
                label(for="Precio_Compra") Precio de la compra:
                input(type="text", name="Precio_Compra", value=`${Compra.Precio_Compra}`)                    
                br
                input(type="hidden", name="id", value=`${Compra.ID_Compra}`)                
                input(type="submit", value="Enviar")